# HBase数据迁移验证系统环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# 应用配置
PYTHONUNBUFFERED=1
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# 源端HBase配置
SOURCE_HBASE_HOST=localhost
SOURCE_HBASE_PORT=9090
SOURCE_HBASE_TABLE=hope_saas_oms:oms_order_info
SOURCE_HBASE_TIMEOUT=30000

# 目标端HBase配置
TARGET_HBASE_HOST=localhost
TARGET_HBASE_PORT=9090
TARGET_HBASE_TABLE=hope_saas_oms:oms_order_info
TARGET_HBASE_TIMEOUT=30000

# 验证配置
VALIDATION_MAX_ROWS=1000
VALIDATION_MAX_WORKERS=10
VALIDATION_BATCH_SIZE=100
VALIDATION_TIMEOUT=300
VALIDATION_SAMPLE_RATE=1.0

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=hbase_validation.log

# 报告配置
REPORT_OUTPUT_DIR=./reports
REPORT_FORMATS=json,excel
REPORT_INCLUDE_DETAILS=true
REPORT_MAX_DETAIL_RECORDS=1000
